<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.PlayerModeController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="60.0">
            <children>
                <Text fill="#c9c9c9" strokeType="OUTSIDE" strokeWidth="0.0" text="choose player mode ">
                    <VBox.margin>
                        <Insets top="100.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>
                <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="200.0" style="-fx-border-color: black;">
                    <children>
                        <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#singleMode" onMouseEntered="#onHovered" onMouseExited="#onMouseExit" prefHeight="26.0" prefWidth="100.0" style="-fx-background-color: black; -fx-border-color: gray; -fx-background-radius: 0; -fx-background-insets: 0px;" text="Single Mode" textFill="#a4a4a4">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <padding>
                                <Insets bottom="-5.0" left="-5.0" right="-5.0" top="-5.0" />
                            </padding>
                        </Button>
                        <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#twoPlayerMode" onMouseEntered="#onHovered" onMouseExited="#onMouseExit" prefHeight="26.0" prefWidth="100.0" style="-fx-background-color: black; -fx-border-color: grey; -fx-background-insets: 0px; -fx-background-radius: 0;" text="Two-Player" textFill="#a4a4a4">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <padding>
                                <Insets bottom="-5.0" left="-5.0" right="-5.0" top="-5.0" />
                            </padding>
                        </Button>
                    </children>
                </HBox>
                <Button mnemonicParsing="false" onMouseClicked="#back" style="-fx-background-color: black; -fx-border-color: black;" text="&lt;-- back" textFill="#b2b2b2">
                    <font>
                        <Font name="Verdana Italic" size="13.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="-520.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</StackPane>
