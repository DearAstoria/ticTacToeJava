<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.gui_controllers.GameLobbyController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
         <children>
            <VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="250.0" spacing="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-14px" text="Join a game" textAlignment="CENTER" textOrigin="CENTER">
                     <VBox.margin>
                        <Insets left="80.0" top="20.0" />
                     </VBox.margin>
                  </Text>
                  <ScrollPane fx:id="playerListScroll" prefHeight="200.0" prefWidth="200.0" style="-fx-background: black;">
                     <content>
                        <VBox fx:id="playerList" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Button alignment="CENTER" contentDisplay="TOP" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#joinGame" prefWidth="180.0" text="CPU (Easy)" textAlignment="CENTER" />
                              <Button minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#joinGame" prefWidth="180.0" text="CPU (Hard)" textAlignment="CENTER" />
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <HBox alignment="TOP_CENTER" spacing="20.0">
                     <children>
                        <Button alignment="CENTER" minWidth="-Infinity" mnemonicParsing="false" prefWidth="100.0" text="Host Game" textAlignment="CENTER">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </Button>
                        <Button alignment="CENTER" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#logout" prefWidth="100.0" text="Logout" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="40.0" />
                     </VBox.margin>
                  </HBox>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-14px" text="LeaderBoard" />
                  <ScrollPane fx:id="leaderBoard" maxWidth="400.0" prefHeight="200.0" prefWidth="200.0" style="-fx-background: black;" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
         </children>
         <padding>
            <Insets left="35.0" />
         </padding></HBox>
   </children>
</AnchorPane>
