<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="600.0" prefWidth="600.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.gui_controllers.GameModeMenuController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="60.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-14px" text="choose player mode ">
                    <VBox.margin> <Insets top="100.0" /> </VBox.margin>
                </Text>
                <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="200.0" style="-fx-border-color: black;">
                    <children>
                        <Button fx:id="SINGLEMODE" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#singleMode" prefHeight="26.0" prefWidth="100.0" text="Single Mode">
                            <padding>
                                <Insets bottom="-5.0" left="-5.0" right="-5.0" top="-5.0" />
                            </padding>
                        </Button>
                        <Button fx:id="TWOPLAYER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#twoPlayerMode" prefHeight="26.0" prefWidth="100.0" text="Two-Player">
                            <padding>
                                <Insets bottom="-5.0" left="-5.0" right="-5.0" top="-5.0" />
                            </padding>
                        </Button>
                    </children>
                </HBox>
                <Button fx:id="BACK" mnemonicParsing="false" onMouseClicked="#back" styleClass="back-button" text="&lt;-- back">
                    <VBox.margin>
                        <Insets left="-520.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</StackPane>
